cabal-version: 2.2
name:          guanxi
category:      Logic
version:       0
license:       BSD-2-Clause OR Apache-2.0
license-file:  LICENSE.md
author:        Edward A. Kmett
maintainer:    Edward A. Kmett <ekmett@gmail.com>
stability:     experimental
homepage:      http://github.com/ekmett/guanxi/
bug-reports:   http://github.com/ekmett/guanxi/issues
copyright:     Copyright (C) 2018 Edward A. Kmett
synopsis:      Relational programming
description:   Propagator-based relational programming in Haskell.
build-type:    Simple
extra-source-files:
  .hlint.yaml
  CHANGELOG.md
  README.md
  test/doctest.json
  cbits/dlx_queens.cpp
  cbits/dxz_queens.cpp
  cbits/*.h
  cbits/*.hpp
  cbits/Makefile

source-repository head
  type: git
  location: git://github.com/ekmett/guanxi.git

--------------------------------------------------------
-- * Library
--------------------------------------------------------

common base
  ghc-options: -Wall -Wextra
  default-language: Haskell2010
  build-depends: base >= 4.12 && < 5

common data-default
  build-depends: data-default

common mtl
  build-depends: mtl >= 2.2.2 && < 2.3

common primitive
  build-depends: primitive

library
  import: base, data-default, mtl, primitive
  hs-source-dirs: src

  -- C++ bits
  cxx-options: -std=c++11 -Wall -g
  cxx-sources:
    cbits/dlx.cpp cbits/dlx_capi.cpp
    cbits/dxz.cpp cbits/dxz_capi.cpp
  include-dirs: cbits
  extra-libraries: stdc++

  build-depends:
    comonad,
    containers,
    contravariant,
    fingertree,
    groups              >= 0.4 && < 0.5,
    hashable,
    lens,
    primitive,
    transformers        >= 0.5.5 && < 0.6,
    unordered-containers

  exposed-modules:
    Aligned.Internal
    Aligned.Base
    Aligned.Free
    Aligned.Freer
    Cover.DLX
    Cover.DXZ
    Disjoint
    Domain.Internal
    Domain.Interval
    Domain.Relational
    Equality
    FD.Monad
    FD.Var
    Key
    Key.Coercible
    Log
    Logic.Class
    Logic.Cont
    Logic.ContUnwind
    Logic.Naive
    Logic.Reflection
    Par.Cont
    Par.Class
    Par.Future
    Par.Promise
    Ref
    Relative.Base
    Relative.Internal
    SAT
    Sink
    Prompt.Class
    Prompt.Iterator
    Prompt.Reflection
    Sharing
    Signal
    Tactic
    Unaligned.Base
    Unaligned.Internal
    Unification.Class
    Unique
    Vec

--------------------------------------------------------
-- * Tests
--------------------------------------------------------

common test
  import: base
  build-depends: guanxi
  ghc-options: -threaded -rtsopts
  hs-source-dirs: test

test-suite doctests
  import: test
  buildable: False
  type: exitcode-stdio-1.0
  main-is: doctest-main.hs
  build-depends: doctest
  build-tool-depends: doctest-discover:doctest-discover

test-suite hedgehog
  import: test, data-default
  type: exitcode-stdio-1.0
  main-is: hedgehog-main.hs
  build-depends:
    hedgehog >= 0.6.1 && < 1.1

test-suite spec
  import: test, mtl, primitive
  type: exitcode-stdio-1.0
  main-is: spec.hs
  other-modules:
    Spec.Cover.DLX
    Spec.Domain.Interval
    Spec.FD.Monad
    Spec.Logic.Reflection
    Spec.Prompt.Iterator
    Spec.Ref
    Spec.Unaligned.Base
  build-depends:
    hspec >= 2 && < 3

test-suite queens
  import: test
  type: exitcode-stdio-1.0
  main-is: queens.hs
